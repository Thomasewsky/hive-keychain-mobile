<?xml version="1.0" encoding="utf-8"?>
<!-- Currency Item Ini-->
<LinearLayout android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="170dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/black">

    <!-- Currency/Symbol & value section-->
    <LinearLayout
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="24dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/appwidget_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/appwidget_text"
            android:text="Currency"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/appwidget_currency_value_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/appwidget_text"
            android:text="..."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- end Currency/Symbol section-->

    <!-- Currency/Symbol 24h change & Keychain logo section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="24dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/appwidget_currency_usd_24h_change_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/appwidget_text"
                android:text="0.0%"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/appwidget_icon_direction_up"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/arrow_upward"
                android:visibility="gone"
                tools:visibility="visible"
                android:tint="@color/green" />
            <ImageView
                android:id="@+id/appwidget_icon_direction_down"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/arrow_downward"
                android:visibility="gone"
                tools:visibility="visible"
                android:tint="@color/red" />
        </LinearLayout>
    </LinearLayout>
    <!-- end Currency/Symbol 24h change & Keychain logo section-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow_downward"
            android:tint="#FFFFFF" />
    </LinearLayout>
    <!-- Currency Item End-->
    
</LinearLayout>